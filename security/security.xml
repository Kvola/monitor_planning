<odoo>
    <data noupdate="1">
        
        <!-- Groupes de sécurité -->
        <record id="group_monitor_user" model="res.groups">
            <field name="name">Moniteur - Utilisateur</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">Peut voir ses propres planifications et soumettre des rapports</field>
        </record>
        
        <record id="group_monitor_coordinator" model="res.groups">
            <field name="name">Moniteur - Coordinateur</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_monitor_user'))]"/>
            <field name="comment">Peut gérer les planifications et évaluer les moniteurs</field>
        </record>
        
        <record id="group_monitor_manager" model="res.groups">
            <field name="name">Moniteur - Responsable</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_monitor_coordinator'))]"/>
            <field name="comment">Accès complet à tous les modules de gestion des moniteurs</field>
        </record>

        <!-- Règles d'enregistrement pour les moniteurs -->
        <record id="monitor_planning_rule_own" model="ir.rule">
            <field name="name">Moniteur: voir ses propres planifications</field>
            <field name="model_id" ref="model_monitor_planning"/>
            <field name="groups" eval="[(4, ref('group_monitor_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('monitor_id.user_ids', 'in', [user.id])]</field>
        </record>
        
        <record id="monitor_planning_rule_coordinator" model="ir.rule">
            <field name="name">Coordinateur: voir toutes les planifications</field>
            <field name="model_id" ref="model_monitor_planning"/>
            <field name="groups" eval="[(4, ref('group_monitor_coordinator'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <!-- Règles pour les rapports -->
        <record id="monitor_report_rule_own" model="ir.rule">
            <field name="name">Moniteur: ses propres rapports</field>
            <field name="model_id" ref="model_monitor_report"/>
            <field name="groups" eval="[(4, ref('group_monitor_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('monitor_id.user_ids', 'in', [user.id])]</field>
        </record>

        <!-- Règles pour les évaluations -->
        <record id="monitor_evaluation_rule_own" model="ir.rule">
            <field name="name">Moniteur: voir ses propres évaluations</field>
            <field name="model_id" ref="model_monitor_evaluation"/>
            <field name="groups" eval="[(4, ref('group_monitor_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('monitor_id.user_ids', 'in', [user.id])]</field>
        </record>

    </data>
</odoo>